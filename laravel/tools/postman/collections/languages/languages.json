  "item": [
    {
      "name": "List Languages",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/languages?per_page=25&page=1&sort_by=created_at&sort_direction=desc",
          "host": ["{{base_url}}"],
          "path": ["languages"],
          "query": [
            {"key": "per_page", "value": "25", "description": "Number of items per page"},
            {"key": "page", "value": "1", "description": "Page number"},
            {"key": "search", "value": "", "description": "Search in name, native_name and code", "disabled": true},
            {"key": "active_only", "value": "true", "description": "Filter active languages only", "disabled": true},
            {"key": "direction", "value": "ltr", "description": "Filter by text direction (ltr, rtl)", "disabled": true},
            {"key": "sort_by", "value": "created_at", "description": "Sort by field"},
            {"key": "sort_direction", "value": "desc", "description": "Sort direction (asc, desc)"}
          ]
        },
        "description": "Retrieve paginated list of languages with filtering options"
      },
      "response": []
