      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"tr\",\n  \"name\": \"Turkish\",\n  \"native_name\": \"Türkçe\",\n  \"locale\": \"tr_TR\",\n  \"direction\": \"ltr\",\n  \"is_active\": true\n}",
          "options": {"raw": {"language": "json"}}
        },
        "url": {
          "raw": "{{base_url}}/languages",
          "host": ["{{base_url}}"],
          "path": ["languages"]
        },
        "description": "Create a new language"
      },
      "response": []
    },
    {
