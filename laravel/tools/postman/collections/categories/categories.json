{
  "info": {
    "name": "Categories",
    "description": "Category management endpoints with full CRUD operations and soft deletes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Categories",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/categories?per_page=25&page=1&sort_by=created_at&sort_direction=desc",
          "host": ["{{base_url}}"],
          "path": ["categories"],
          "query": [
            {"key": "per_page", "value": "25", "description": "Number of items per page"},
            {"key": "page", "value": "1", "description": "Page number"},
            {"key": "search", "value": "", "description": "Search in name and description", "disabled": true},
            {"key": "status", "value": "active", "description": "Filter by status", "disabled": true},
            {"key": "sort_by", "value": "created_at", "description": "Sort by field"},
            {"key": "sort_direction", "value": "desc", "description": "Sort direction (asc, desc)"}
          ]
        },
        "description": "Retrieve paginated list of categories with filtering options"
      },
      "response": []
    },
    {
      "name": "Create Category",
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Electronics\",\n  \"description\": \"Electronic devices and gadgets\",\n  \"status\": \"active\"\n}",
          "options": {"raw": {"language": "json"}}
        },
        "url": {
          "raw": "{{base_url}}/categories",
          "host": ["{{base_url}}"],
          "path": ["categories"]
        },
        "description": "Create a new category"
      },
      "response": []
    },
    {
      "name": "Get Category",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/categories/{{category_uuid}}",
          "host": ["{{base_url}}"],
          "path": ["categories", "{{category_uuid}}"]
        },
        "description": "Get a specific category by ID"
      },
      "response": []
    },
    {
      "name": "Update Category",
      "request": {
        "method": "PUT",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Electronics\",\n  \"description\": \"Updated description for electronic devices and gadgets\",\n  \"status\": \"active\"\n}",
          "options": {"raw": {"language": "json"}}
        },
        "url": {
          "raw": "{{base_url}}/categories/{{category_uuid}}",
          "host": ["{{base_url}}"],
          "path": ["categories", "{{category_uuid}}"]
        },
        "description": "Update a specific category"
      },
      "response": []
    },
    {
      "name": "Delete Category (Soft Delete)",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{base_url}}/categories/{{category_uuid}}",
          "host": ["{{base_url}}"],
          "path": ["categories", "{{category_uuid}}"]
        },
        "description": "Soft delete a specific category"
      },
      "response": []
    },
    {
      "name": "Restore Category",
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{}",
          "options": {"raw": {"language": "json"}}
        },
        "url": {
          "raw": "{{base_url}}/categories/{{category_uuid}}/restore",
          "host": ["{{base_url}}"],
          "path": ["categories", "{{category_uuid}}", "restore"]
        },
        "description": "Restore a soft deleted category"
      },
      "response": []
    },
    {
      "name": "Force Delete Category",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{base_url}}/categories/{{category_uuid}}/force-delete",
          "host": ["{{base_url}}"],
          "path": ["categories", "{{category_uuid}}", "force-delete"]
        },
        "description": "Permanently delete a category"
      },
      "response": []
    },
    {
      "name": "Filters",
      "description": "Category filtering and search operations",
      "item": [
        {
          "name": "Filter by Status - Active",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/categories?status=active&per_page={{per_page}}&page={{page}}",
              "host": ["{{base_url}}"],
              "path": ["categories"],
              "query": [
                {"key": "status", "value": "active", "description": "Filter active categories"},
                {"key": "per_page", "value": "{{per_page}}", "description": "Items per page"},
                {"key": "page", "value": "{{page}}", "description": "Page number"}
              ]
            },
            "description": "Get all active categories"
          },
          "response": []
        },
        {
          "name": "Filter by Status - Inactive",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/categories?status=inactive&per_page={{per_page}}&page={{page}}",
              "host": ["{{base_url}}"],
              "path": ["categories"],
              "query": [
                {"key": "status", "value": "inactive", "description": "Filter inactive categories"},
                {"key": "per_page", "value": "{{per_page}}", "description": "Items per page"},
                {"key": "page", "value": "{{page}}", "description": "Page number"}
              ]
            },
            "description": "Get all inactive categories"
          },
          "response": []
        },
        {
          "name": "Search Categories",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/categories?search={{search}}&per_page={{per_page}}&page={{page}}",
              "host": ["{{base_url}}"],
              "path": ["categories"],
              "query": [
                {"key": "search", "value": "{{search}}", "description": "Search in name and description"},
                {"key": "per_page", "value": "{{per_page}}", "description": "Items per page"},
                {"key": "page", "value": "{{page}}", "description": "Page number"}
              ]
            },
            "description": "Search categories by name or description"
          },
          "response": []
        },
        {
          "name": "Sort by Name ASC",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/categories?sort_by=name&sort_direction=asc&per_page={{per_page}}&page={{page}}",
              "host": ["{{base_url}}"],
              "path": ["categories"],
              "query": [
                {"key": "sort_by", "value": "name", "description": "Sort by name field"},
                {"key": "sort_direction", "value": "asc", "description": "Sort direction ascending"},
                {"key": "per_page", "value": "{{per_page}}", "description": "Items per page"},
                {"key": "page", "value": "{{page}}", "description": "Page number"}
              ]
            },
            "description": "Get categories sorted by name (A-Z)"
          },
          "response": []
        },
        {
          "name": "Sort by Created Date DESC",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/categories?sort_by=created_at&sort_direction=desc&per_page={{per_page}}&page={{page}}",
              "host": ["{{base_url}}"],
              "path": ["categories"],
              "query": [
                {"key": "sort_by", "value": "created_at", "description": "Sort by creation date"},
                {"key": "sort_direction", "value": "desc", "description": "Sort direction descending"},
                {"key": "per_page", "value": "{{per_page}}", "description": "Items per page"},
                {"key": "page", "value": "{{page}}", "description": "Page number"}
              ]
            },
            "description": "Get categories sorted by creation date (newest first)"
          },
          "response": []
        },
        {
          "name": "Combined Filters",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/categories?status=active&search=electronics&sort_by=name&sort_direction=asc&per_page={{per_page}}&page={{page}}",
              "host": ["{{base_url}}"],
              "path": ["categories"],
              "query": [
                {"key": "status", "value": "active", "description": "Active categories only"},
                {"key": "search", "value": "electronics", "description": "Search for 'electronics'"},
                {"key": "sort_by", "value": "name", "description": "Sort by name"},
                {"key": "sort_direction", "value": "asc", "description": "Ascending order"},
                {"key": "per_page", "value": "{{per_page}}", "description": "Items per page"},
                {"key": "page", "value": "{{page}}", "description": "Page number"}
              ]
            },
            "description": "Multiple filters combined: active, search, sorted"
          },
          "response": []
        }
      ]
    }
  ]
}