  "item": [
    {
      "name": "List Products",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/products?per_page=25&page=1&sort_by=created_at&sort_direction=desc",
          "host": ["{{base_url}}"],
          "path": ["products"],
          "query": [
            {"key": "per_page", "value": "25", "description": "Number of items per page"},
            {"key": "page", "value": "1", "description": "Page number"},
            {"key": "search", "value": "", "description": "Search in name and description", "disabled": true},
            {"key": "category_uuid", "value": "", "description": "Filter by category UUID", "disabled": true},
            {"key": "is_active", "value": "true", "description": "Filter by active status", "disabled": true},
            {"key": "min_price", "value": "", "description": "Minimum price filter", "disabled": true},
            {"key": "max_price", "value": "", "description": "Maximum price filter", "disabled": true},
            {"key": "sort_by", "value": "created_at", "description": "Sort by field"},
            {"key": "sort_direction", "value": "desc", "description": "Sort direction (asc, desc)"}
          ]
        },
        "description": "Retrieve paginated list of products with filtering options"
      },
      "response": []
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"iPhone 15 Pro\",\n  \"description\": \"Latest iPhone model with advanced features\",\n  \"sku\": \"IPH-15-PRO-001\",\n  \"price\": 129900,\n  \"stock_quantity\": 50,\n  \"image_path\": \"/images/products/iphone-15-pro.jpg\",\n  \"is_active\": true,\n  \"category_uuid\": \"{{category_uuid}}\"\n}",
          "options": {"raw": {"language": "json"}}
        },
        "url": {
          "raw": "{{base_url}}/products",
          "host": ["{{base_url}}"],
          "path": ["products"]
        },
        "description": "Create a new product"
      },
      "response": []
    },
    {
      "name": "Get Product",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/products/{{product_uuid}}",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_uuid}}"]
        },
        "description": "Get a specific product by UUID"
      },
      "response": []
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PUT",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"iPhone 15 Pro Updated\",\n  \"description\": \"Updated description for iPhone 15 Pro\",\n  \"price\": 119900,\n  \"stock_quantity\": 75,\n  \"is_active\": true\n}",
          "options": {"raw": {"language": "json"}}
        },
        "url": {
          "raw": "{{base_url}}/products/{{product_uuid}}",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_uuid}}"]
        },
        "description": "Update a specific product"
      },
      "response": []
    },
    {
      "name": "Delete Product (Soft Delete)",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{base_url}}/products/{{product_uuid}}",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_uuid}}"]
        },
        "description": "Soft delete a specific product"
      },
      "response": []
    },
    {
      "name": "Restore Product",
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{}",
          "options": {"raw": {"language": "json"}}
        },
        "url": {
          "raw": "{{base_url}}/products/{{product_uuid}}/restore",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_uuid}}", "restore"]
        },
        "description": "Restore a soft deleted product"
      },
      "response": []
    },
    {
      "name": "Force Delete Product",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{base_url}}/products/{{product_uuid}}/force-delete",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_uuid}}", "force-delete"]
        },
        "description": "Permanently delete a product"
      },
      "response": []
    },
    {
