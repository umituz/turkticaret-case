    {
      "name": "Get Available Shipping Methods",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Response status code is 200', function () {",
              "    pm.expect(pm.response.code).to.equal(200);",
              "});",
              "",
              "pm.test('Response has required structure', function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson).to.have.property('success', true);",
              "    pm.expect(responseJson).to.have.property('message');",
              "    pm.expect(responseJson).to.have.property('data');",
              "});",
              "",
              "pm.test('Shipping methods data is an array', function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson.data).to.be.an('array');",
              "});",
              "",
              "pm.test('Each shipping method has required properties', function () {",
              "    const responseJson = pm.response.json();",
              "    if (responseJson.data.length > 0) {",
              "        const firstMethod = responseJson.data[0];",
              "        pm.expect(firstMethod).to.have.property('uuid');",
              "        pm.expect(firstMethod).to.have.property('name');",
              "        pm.expect(firstMethod).to.have.property('description');",
              "        pm.expect(firstMethod).to.have.property('price');",
              "        pm.expect(firstMethod).to.have.property('min_delivery_days');",
              "        pm.expect(firstMethod).to.have.property('max_delivery_days');",
              "        pm.expect(firstMethod).to.have.property('is_active');",
              "        pm.expect(firstMethod).to.have.property('delivery_time');",
              "    }",
              "});",
              "",
              "pm.test('Price is a valid number format', function () {",
              "    const responseJson = pm.response.json();",
              "    if (responseJson.data.length > 0) {",
              "        const firstMethod = responseJson.data[0];",
              "        pm.expect(firstMethod.price).to.match(/^\\d+\\.\\d{2}$/);",
              "    }",
              "});",
              "",
              "pm.test('Delivery days are valid integers', function () {",
              "    const responseJson = pm.response.json();",
              "    if (responseJson.data.length > 0) {",
              "        const firstMethod = responseJson.data[0];",
              "        pm.expect(firstMethod.min_delivery_days).to.be.a('number');",
              "        pm.expect(firstMethod.max_delivery_days).to.be.a('number');",
              "        pm.expect(firstMethod.min_delivery_days).to.be.at.least(1);",
              "        pm.expect(firstMethod.max_delivery_days).to.be.at.least(firstMethod.min_delivery_days);",
              "    }",
              "});",
              "",
              "pm.test('All methods are active', function () {",
              "    const responseJson = pm.response.json();",
              "    responseJson.data.forEach(method => {",
              "        pm.expect(method.is_active).to.equal(true);",
              "    });",
              "});",
              "",
              "pm.test('Methods are sorted by sort_order and price', function () {",
              "    const responseJson = pm.response.json();",
              "    if (responseJson.data.length > 1) {",
              "        for (let i = 1; i < responseJson.data.length; i++) {",
              "            const current = responseJson.data[i];",
              "            const previous = responseJson.data[i - 1];",
              "            ",
              "            if (current.sort_order === previous.sort_order) {",
              "                pm.expect(parseFloat(current.price)).to.be.at.least(parseFloat(previous.price));",
              "            } else {",
              "                pm.expect(current.sort_order).to.be.at.least(previous.sort_order);",
              "            }",
              "        }",
              "    }",
              "});",
              "",
              "pm.test('Response time is acceptable', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(2000);",
              "});",
              "",
              "// Save first shipping method UUID for other requests",
              "pm.test('Save first shipping method UUID', function () {",
              "    const responseJson = pm.response.json();",
              "    if (responseJson.data.length > 0) {",
              "        pm.collectionVariables.set('shipping_method_uuid', responseJson.data[0].uuid);",
              "    }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
