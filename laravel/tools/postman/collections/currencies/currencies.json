  },
  "item": [
    {
      "name": "List Currencies",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/currencies?per_page=25&page=1&sort_by=created_at&sort_direction=desc",
          "host": ["{{base_url}}"],
          "path": ["currencies"],
          "query": [
            {"key": "per_page", "value": "25", "description": "Number of items per page"},
            {"key": "page", "value": "1", "description": "Page number"},
            {"key": "search", "value": "", "description": "Search in name and code", "disabled": true},
            {"key": "active_only", "value": "true", "description": "Filter active currencies only", "disabled": true},
            {"key": "sort_by", "value": "created_at", "description": "Sort by field"},
            {"key": "sort_direction", "value": "desc", "description": "Sort direction (asc, desc)"}
          ]
        },
        "description": "Retrieve paginated list of currencies with filtering options"
      },
      "response": []
    },
    {
      "name": "Create Currency",
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"TRY\",\n  \"name\": \"Turkish Lira\",\n  \"symbol\": \"₺\",\n  \"decimals\": 2,\n  \"is_active\": true\n}",
          "options": {"raw": {"language": "json"}}
        },
        "url": {
          "raw": "{{base_url}}/currencies",
          "host": ["{{base_url}}"],
          "path": ["currencies"]
        },
        "description": "Create a new currency"
      },
      "response": []
    },
    {
      "name": "Get Currency",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/currencies/{{currency_uuid}}",
          "host": ["{{base_url}}"],
          "path": ["currencies", "{{currency_uuid}}"]
        },
        "description": "Get a specific currency by ID"
      },
      "response": []
    },
    {
      "name": "Update Currency",
      "request": {
        "method": "PUT",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"TRY\",\n  \"name\": \"New Turkish Lira\",\n  \"symbol\": \"₺\",\n  \"decimals\": 2,\n  \"is_active\": true\n}",
          "options": {"raw": {"language": "json"}}
        },
        "url": {
          "raw": "{{base_url}}/currencies/{{currency_uuid}}",
          "host": ["{{base_url}}"],
          "path": ["currencies", "{{currency_uuid}}"]
