        "method": "DELETE",
        "url": {
          "raw": "{{base_url}}/currencies/{{currency_uuid}}",
          "host": ["{{base_url}}"],
          "path": ["currencies", "{{currency_uuid}}"]
        },
        "description": "Soft delete a specific currency"
      },
      "response": []
    },
    {
      "name": "Restore Currency",
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{}",
          "options": {"raw": {"language": "json"}}
        },
        "url": {
          "raw": "{{base_url}}/currencies/{{currency_uuid}}/restore",
          "host": ["{{base_url}}"],
          "path": ["currencies", "{{currency_uuid}}", "restore"]
